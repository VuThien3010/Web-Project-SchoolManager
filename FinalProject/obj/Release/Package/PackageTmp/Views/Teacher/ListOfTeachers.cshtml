@model IEnumerable<FinalProject.Teacher>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Teacher Name
        </th>
        <th>
            Teacher Phone
        </th>
        <th>
            Teacher Password
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.teacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.teacherPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.userPassword)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.teacherId }) |
                @Html.ActionLink("Details", "Details", new { id = item.teacherId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.teacherId })
            </td>
        </tr>
    }

</table>
